generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  motDePasse String
  nom        String?
}

model Client {
  id        Int      @id @default(autoincrement())
  nom       String
  email     String?
  telephone String?
  siteWeb   String?
  photoPath String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  projets ProjetClient[]
}

model Projet {
  id          Int            @id @default(autoincrement())
  nom         String
  description String?
  missions    Mission[]
  clients     ProjetClient[]
}

model ProjetClient {
  id       Int @id @default(autoincrement())
  projetId Int
  clientId Int

  projet Projet @relation(fields: [projetId], references: [id])
  client Client @relation(fields: [clientId], references: [id])

  @@unique([projetId, clientId])
}

model Mission {
  id                   Int           @id @default(autoincrement())
  titre                String
  description          String?
  statut               StatutMission @default(EN_COURS)
  dateDebut            DateTime      @default(now())
  dureePrevueMinutes   Int?
  createdAt            DateTime      @default(now())
  tjm                  Int?
  requiredDailyMinutes Int?

  projetId Int
  projet   Projet  @relation(fields: [projetId], references: [id])
  temps    Temps[]
}

model Temps {
  id           Int       @id @default(autoincrement())
  date         DateTime  @default(now())
  createdAt    DateTime  @default(now())
  dureeMinutes Int
  description  String?
  missionId    Int
  mission      Mission   @relation(fields: [missionId], references: [id])
  typeTacheId  Int
  typeTache    TypeTache @relation(fields: [typeTacheId], references: [id])
}

model TypeTache {
  id    Int     @id @default(autoincrement())
  nom   String
  temps Temps[]
}

model Parametre {
  id    String @id
  value Float
}

model PaiementMensuel {
  id        Int      @id @default(autoincrement())
  mois      DateTime @unique
  montant   Float
  createdAt DateTime @default(now())
}

enum StatutMission {
  EN_COURS
  TERMINEE
  EN_ATTENTE
  ANNULEE
}
