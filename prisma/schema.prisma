generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  motDePasse String
  nom        String?
}

enum ClientType {
  INDIVIDUAL
  COMPANY
}

enum VatStatus {
  UNKNOWN
  NOT_APPLICABLE
  VAT_EXEMPT
  VAT_REGISTERED
}

model Client {
  id Int @id @default(autoincrement())

  // ===== Identité (affichage + facturation) =====
  nom       String // nom affiché (ex: "ACME", ou "Jean Dupont")
  legalName String? // raison sociale / nom légal exact si différent
  type      ClientType @default(COMPANY)

  // ===== Contact =====
  email     String?
  telephone String?
  siteWeb   String?
  photoPath String?

  // ===== Adresse de facturation =====
  addressLine1 String?
  addressLine2 String?
  postalCode   String?
  city         String?
  state        String? // optionnel (ex: région/état)
  countryCode  String? // ISO2 (ex: "FR", "BE", "CH")

  // ===== Infos société (si COMPANY) =====
  companyRegistrationNumber String? // n° registre local (RCS/KB/… selon pays)
  siret                     String? // utile si client FR
  siren                     String? // utile si tu veux, optionnel
  tvaNumber                 String? // VAT number intracom (ex: "FRxx...")
  vatStatus                 VatStatus @default(UNKNOWN)

  // ===== Facturation =====
  billingEmail String? // si différent du mail principal
  billingNote  String? // infos utiles facture (ex: "PO #123", "Service compta: ...")

  // ===== Meta =====
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  projets ProjetClient[]
}

model Projet {
  id          Int            @id @default(autoincrement())
  nom         String
  description String?
  missions    Mission[]
  clients     ProjetClient[]
}

model ProjetClient {
  id        Int     @id @default(autoincrement())
  projetId  Int
  clientId  Int
  isBilling Boolean @default(false)

  projet Projet @relation(fields: [projetId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([projetId, clientId])
  @@index([projetId])
  @@index([clientId])
  @@index([projetId, isBilling])
}

model Mission {
  id                   Int           @id @default(autoincrement())
  titre                String
  description          String?
  statut               StatutMission @default(EN_COURS)
  dateDebut            DateTime      @default(now())
  dureePrevueMinutes   Int?
  createdAt            DateTime      @default(now())
  tjm                  Int?
  requiredDailyMinutes Int?
  image                String?

  projetId Int
  projet   Projet  @relation(fields: [projetId], references: [id])
  temps    Temps[]
}

model Temps {
  id           Int       @id @default(autoincrement())
  date         DateTime  @default(now())
  createdAt    DateTime  @default(now())
  dureeMinutes Int
  description  String?
  missionId    Int
  mission      Mission   @relation(fields: [missionId], references: [id])
  typeTacheId  Int
  typeTache    TypeTache @relation(fields: [typeTacheId], references: [id])
}

model TypeTache {
  id    Int     @id @default(autoincrement())
  nom   String
  temps Temps[]
}

model Parametre {
  id    String @id
  value Float
}

model PaiementMensuel {
  id        Int      @id @default(autoincrement())
  mois      DateTime @unique
  montant   Float
  createdAt DateTime @default(now())
}

enum StatutMission {
  EN_COURS
  TERMINEE
  EN_ATTENTE
  ANNULEE
}
