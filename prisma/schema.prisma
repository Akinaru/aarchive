generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String?
  tasks    Task[]
}

model Project {
  id       Int    @id @default(autoincrement())
  name     String
  client   String?
  tasks    Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  type      String
  duration  Float
  date      DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
}
